FROM python:3.11-slim

# Build argument to control ML dependencies
# Usage: docker build --build-arg INSTALL_ML=false ...
ARG INSTALL_ML=true

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    postgresql-client \
    curl \
    tesseract-ocr \
    tesseract-ocr-eng \
    libtesseract-dev \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Copy requirements
COPY requirements.txt .

# Install core dependencies
RUN pip install --no-cache-dir --timeout=600 \
    fastapi uvicorn[standard] pydantic pydantic-settings slowapi \
    supabase psycopg2-binary sqlalchemy alembic \
    python-jose[cryptography] passlib[bcrypt] python-multipart

# Install ML dependencies conditionally (sentence-transformers is large)
RUN if [ "$INSTALL_ML" = "true" ]; then \
        pip install --no-cache-dir --timeout=600 sentence-transformers numpy; \
    fi

# Install remaining dependencies
RUN pip install --no-cache-dir --timeout=600 \
    pytesseract Pillow pdf2image \
    celery redis boto3 minio \
    python-dotenv httpx aiofiles \
    pytest pytest-asyncio pytest-cov \
    black isort flake8 mypy bandit

# Copy application code
COPY . .

# Create uploads directory
RUN mkdir -p /app/uploads

EXPOSE 8000

CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
