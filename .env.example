# ============================================
# sNAKr - Environment Variables Example
# ============================================
# Copy this file to create your environment files:
# - .env (for local development)
# - .env.production (for production deployment)

# This file shows the structure but contains no real credentials.
# Get your actual values from:
# - Local: `supabase status` after running `supabase start`
# - Production: Your Supabase project dashboard

# ============================================
# API (.env in api/ directory)
# ============================================

API_TITLE="sNAKr API"
API_DESCRIPTION="Shared household inventory intelligence"
API_VERSION="0.1.0"
API_HOST="0.0.0.0"
API_PORT=8000
API_RELOAD=true

CORS_ORIGINS=http://localhost:3000,http://localhost:3001
WEB_APP_URL=http://localhost:3000

SUPABASE_URL=http://127.0.0.1:54321
SUPABASE_KEY=your-anon-key-here
SUPABASE_JWT_SECRET=your-jwt-secret-here

DATABASE_URL=postgresql://postgres:postgres@127.0.0.1:54322/postgres

RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100

LOG_LEVEL=INFO
LOG_FORMAT=json

ENVIRONMENT=development

# ============================================
# Web App (.env in web/ directory)
# ============================================

NEXT_PUBLIC_SUPABASE_URL=http://127.0.0.1:54321
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

NEXT_PUBLIC_API_URL=http://localhost:8000

NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here

# ============================================
# Mobile App (.env in mobile/ directory)
# ============================================

EXPO_PUBLIC_SUPABASE_URL=http://127.0.0.1:54321
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

EXPO_PUBLIC_API_URL=http://localhost:8000

EXPO_PUBLIC_ENV=development
